/**index.wxss**/

.top {
    position: fixed;
    top: 0;
    background: #ffffff;
    width: 100%;
}

.search {
    width: 90%;
    margin-left: 5%;
    height: 60rpx;
    border-radius: 30rpx;
    background-color: #f4f4f4;
}

.search .search-icon {
    width: 34rpx;
    height: 34rpx;
    margin: 13rpx 34rpx;
}

.filters {
    display: flex;
    flex-wrap: nowrap;
    justify-content: space-around;
    padding: 20rpx 24rpx;
}

.filter-item {
    font-size: 32rpx;
    min-width: 80rpx;
    color: #b9b9b9;
    text-align: center;
}

.filters .active {
    color: #404040;
}

.list {
    background: #f0f0f0;
    padding-top: 144rpx;
}

.list-item {
    padding: 20rpx 30rpx;
    margin-bottom: 16rpx;
    background: #ffffff;
}

.list-item .head-img {
    border-radius: 50%;
    width: 60rpx;
    height: 60rpx;
    vertical-align: middle;
}

.list-item .nickname {
    font-size: 28rpx;
    color: #3a3a3a;
    line-height: 60rpx;
    display: inline-block;
    margin-left: 20rpx;
    font-weight: 500;
}

.list-item .list-content {
    font-size: 24rpx;
    color: #787878;
    line-height: 2;
    text-indent: 24rpx;
    margin-top: 20rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
}

.list-item .content-imgs {
    display: flex;
    justify-content: flex-start;
}

.list-item .upload-image {
    max-width: 224rpx;
    max-height: 134rpx;
    display: inline-block;
    margin: 10rpx 16rpx;
}

.list-item .options {
    display: flex;
    justify-content: space-between;
    padding: 0 20rpx;
}

.list-item .options .option-icon {
    width: 30rpx;
    height: 30rpx;
}

.list-item .options .option-item {
    display: inline-block;
}

.list-item .option-item .option-num {
    font-size: 20rpx;
    position: relative;
    top: -14rpx;
    left: 8rpx;
    color: #787878;
    font-weight: 600;
}

.list-item .comments {
    background: #fbfbfb;
    padding: 16rpx;
    border-radius: 16rpx;
    font-size: 20rpx;
}

.comments .commenter {
    color: #fa5167;
    margin-right: 16rpx;
}

.comments .content {
    color: #6b6b6b;

}